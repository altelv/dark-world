{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@engine/*": ["src/engine/*"],
      "@types/*": ["src/types/*"],
      "@store/*": ["src/store/*"],
      "@components/*": ["src/components/*"],
      "@orchestrator/*": ["src/orchestrator/*"],
      "@data/*": ["src/game/data/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": ["src", "api"]
}
